{
  "version": "2.0.0",
  "echoCommand": true,
  "isBackground": true,
  "promptOnClose": true,
  "tasks": [
    {
      "type": "shell",
      "label": "gcc",
      "command": "gcc",
      "args": [
        "-g",
        "${fileBasename}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "promptOnClose": true,
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "g++",
      "command": "g++",
      "args": [
        "-g",
        "${fileBasename}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "promptOnClose": true,
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}